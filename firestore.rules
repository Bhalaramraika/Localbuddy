
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read public parts of any profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      
      // On create, only specific fields can be set by the system (via provider).
      allow create: if isOwner(userId) && request.resource.data.walletBalance == 0 && request.resource.data.xp == 0;

      // On update, user can only change a few fields. Balance/XP is changed by transactions.
      allow update: if isOwner(userId) 
                    && request.resource.data.name == resource.data.name // Can't change name this way
                    && request.resource.data.walletBalance == resource.data.walletBalance // Prevent client-side balance update
                    && request.resource.data.xp == resource.data.xp; // Prevent client-side XP update
    }

    // Tasks can be read by anyone, but mutations are restricted.
    match /tasks/{taskId} {
      allow read;
      
      // Allow create for any authenticated user with valid data.
      allow create: if request.auth != null 
                    && request.resource.data.posterId == request.auth.uid
                    && request.resource.data.status == 'Open'
                    && request.resource.data.title is string
                    && request.resource.data.budget > 0;
      
      // Poster can delete if task is still open.
      allow delete: if resource.data.status == 'Open' && isOwner(resource.data.posterId);

      // Poster can update if open, buddy can update if assigned to them.
      allow update: if (resource.data.status == 'Open' && isOwner(resource.data.posterId)) ||
                       (isOwner(resource.data.buddyId) && request.resource.data.buddyId == resource.data.buddyId) ||
                       (isOwner(resource.data.posterId) && request.resource.data.status == 'paid');
    }

    // Chat is restricted to participants.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      match /messages/{messageId} {
      	 allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
         allow update, delete: if false; // Messages are immutable
      }
    }
    
    // Transactions can only be created by the user involved, and are read-only for that user.
    match /transactions/{transactionId} {
    	allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if false; // Transactions are immutable
    }

    // Notifications are private to each user.
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }
    
    // Default deny: Block all other access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
