
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read public parts of any profile, but only write to their own.
    match /users/{userId} {
      // Allow reading basic public info by any authenticated user
      allow read: if request.auth != null;
      // Allow full get/write access only to the owner
      allow get, write: if isOwner(userId);
    }

    // Tasks can be read by anyone, but mutations are restricted.
    match /tasks/{taskId} {
      allow read;
      
      // Allow create for any authenticated user with valid data.
      allow create: if request.auth != null 
                    && request.resource.data.posterId == request.auth.uid
                    && request.resource.data.status == 'Open'
                    && request.resource.data.title is string
                    && request.resource.data.budget > 0;
      
      // Poster can delete if task is still open.
      allow delete: if resource.data.status == 'Open' && isOwner(resource.data.posterId);

      // Rules for updating a task
      allow update: if 
        // 1. Poster can update if the task is still open.
        (resource.data.status == 'Open' && isOwner(resource.data.posterId)) ||
        // 2. Any authenticated user can become the buddy if the task is open.
        (request.auth != null && resource.data.status == 'Open' && request.resource.data.buddyId == request.auth.uid) ||
        // 3. The assigned buddy can update it (e.g., to mark as completed).
        (isOwner(resource.data.buddyId) && request.resource.data.buddyId == resource.data.buddyId) ||
        // 4. The poster can update it to mark as paid.
        (isOwner(resource.data.posterId) && request.resource.data.status == 'paid');
    }

    // Chat is restricted to participants.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      match /messages/{messageId} {
      	 allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
         allow update, delete: if false; // Messages are immutable
      }
    }
    
    // Transactions can only be accessed by the user involved.
    match /transactions/{transactionId} {
      // User can only get their own transaction
    	allow get: if isOwner(resource.data.userId);
      // User can only list their own transactions by querying on their userId
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      // User can only create transactions for themselves
      allow create: if isOwner(request.resource.data.userId);
      // Transactions are immutable
      allow update, delete: if false;
    }

    // Notifications are private to each user.
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }
    
    // Default deny: Block all other access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
